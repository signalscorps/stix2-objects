{
    "$id": "https://raw.githubusercontent.com/signalscorps/stix2-objects/main/schemas/property-extension/stix-pattern-vulnerable-software-identifier-extension/schema.json",
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "STIX Pattern Vulnerable Object Identifier Property Extension",
    "description": "This extension extends Indicator SDOs with the information about which CPEs (referenced in the pattern property) are actually vulnerable.",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/master/schemas/sdos/indicator.json"
        },
        {
            "properties": {
                "extensions": {
                    "extension-definition--b463c449-d022-48b7-b464-3e9c7ec5cf16": {
                        "extension_type": "property-extension",
                        "$ref": "#/$defs/stix-pattern-vulnerable-software-identifier-extension",
                        "required": [
                            "extension_type",
                            "$ref"
                        ]
                    },
                    "required": [
                        "extension-definition--b463c449-d022-48b7-b464-3e9c7ec5cf16"
                    ]
                }
            }
        }
    ],
    "$defs": {
        "stix-pattern-vulnerable-software-identifier-extension": {
            "type": "object",
            "description": "The set of properties define the vulnerable CPEs in the pattern property.",
            "properties": {
                "all_cpe23uris": {
                    "type": "array",
                    "description": "A list of all cpe23uri's in the pattern.",
                    "items": {
                        "type": "string",
                        "pattern": "^cpe:2.3:"
                    }
                },
                "all_cpe23uris_refs": {
                    "type": "array",
                    "description": "A list of all STIX software SCOs for the cpe23uri's in the pattern.",
                    "items": {
                        "type": "string",
                        "pattern": "^software--"
                    }
                },
                "vulnerable_cpe23uris": {
                    "type": "array",
                    "description": "A list of only the cpe23uri's that are vulnerable in the pattern",
                    "items": {
                        "type": "string",
                        "pattern": "^cpe:2.3:"
                    }
                },
                "vulnerable_cpe23uris_refs": {
                    "type": "array",
                    "description": "A list of all STIX software SCOs for the cpe23uri's that are vulnerable in the pattern",
                    "items": {
                        "type": "string",
                        "pattern": "^software--"
                    }
                }
            },
            "required": []
        }
    }
}